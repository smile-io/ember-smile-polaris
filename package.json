    "eslint-plugin-smile-ember": "8.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "loader.js": "4.7.0",
    "npm-run-all": "4.1.5",
    "prettier": "^2.5.1",
    "qunit": "^2.17.2",
    "qunit-dom": "2.0.0",
    "sass": "^1.67.0",
    "webpack": "^5.88.2"
  },
  "engines": {
    "node": "12.* || 14.* || >= 16"
  },
  "ember": {
    "edition": "classic"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  },
  "volta": {
    "node": "16.20.2",
