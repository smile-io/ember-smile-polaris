{
  "name": "@smile-io/ember-smile-polaris",
  "version": "7.0.1",
  "description": "Smile extensions and customizations to ember-polaris components.",
  "keywords": [
    "component library",
    "components",
    "design",
    "ember",
    "ember-addon",
    "polaris",
    "shopify"
  ],
  "homepage": "https://github.com/smile-io/ember-smile-polaris#readme",
  "bugs": {
    "url": "https://github.com/smile-io/ember-smile-polaris/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smile-io/ember-smile-polaris.git"
  },
  "license": "MIT",
  "author": "Smile.io <devs@smile.io>",
  "contributors": [
    "Tom Netzband <tom@smile.io>",
    "Vlad Vanca <vlad@smile.io>",
    "Andrew Pye <andy@smile.io>"
  ],
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "ember build --environment=production",
    "lint": "concurrently \"npm:lint:*(!fix)\" --names \"lint:\"",
    "lint:fix": "concurrently \"npm:lint:*:fix\" --names \"fix:\"",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "preinstall": "npx only-allow pnpm",
    "prettier": "prettier --write '{addon,app,blueprints,config,lib,tests,mirage}/**/*.js' *.js",
    "prepare": "husky install",
    "release": "release-it",
    "start": "ember serve",
    "test": "concurrently \"npm:lint\" \"npm:test:*\" --names \"lint,test:\"",
    "test:ember": "ember test",
    "test:ember-compatibility": "ember try:each"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ]
  },
  "dependencies": {
    "@ember-decorators/component": "^6.0.1",
    "@ember/render-modifiers": "^2.1.0",
    "@ember/string": "^3.1.1",
    "@shopify/javascript-utilities": "^2.4.0",
    "@shopify/polaris": "3.10.0",
    "@shopify/polaris-tokens": "^1.3.1",
    "broccoli-funnel": "^3.0.8",
    "broccoli-merge-trees": "^4.2.0",
    "chalk": "^4.0.0",
    "ember-auto-import": "^2.6.3",
    "ember-basic-dropdown": "^7.3.0",
    "ember-cli-babel": "^7.26.10",
    "ember-cli-htmlbars": "^6.3.0",
    "ember-cli-sass": "^11.0.1",
    "ember-composable-helpers": "^5.0.0",
    "ember-decorators": "^6.1.1",
    "ember-element-helper": "^0.8.4",
    "ember-event-helpers": "^0.1.1",
    "ember-keyboard": "^8.2.1",
    "ember-lifeline": "^6.0.3",
    "ember-modifier": "^4.1.0",
    "ember-svg-jar": "^2.4.6",
    "ember-truth-helpers": "^4.0.3",
    "fs-extra": "^11.1.1",
    "resolve": "^1.22.4",
    "rsvp": "^4.8.5"
  },
  "devDependencies": {
    "@babel/core": "7.23.7",
    "@babel/eslint-parser": "^7.22.10",
    "@ember/optional-features": "2.0.0",
    "@ember/test-helpers": "^2.6.0",
    "@embroider/test-setup": "^0.48.1",
    "@embroider/util": "1.12.1",
    "@glimmer/component": "1.1.2",
    "@glimmer/tracking": "1.1.2",
    "@release-it-plugins/lerna-changelog": "6.0.0",
    "broccoli-asset-rev": "3.0.0",
    "concurrently": "^8.2.1",
    "ember-array-helper": "5.1.0",
    "ember-cli": "3.28.6",
    "ember-cli-dependency-checker": "3.3.2",
    "ember-cli-deprecation-workflow": "2.1.0",
    "ember-cli-inject-live-reload": "2.1.0",
    "ember-cli-release": "1.0.0-beta.2",
    "ember-cli-sri": "2.1.1",
    "ember-cli-terser": "^4.0.2",
    "ember-disable-prototype-extensions": "1.1.3",
    "ember-export-application-global": "2.0.1",
    "ember-load-initializers": "2.1.2",
    "ember-page-title": "^8.0.0",
    "ember-qunit": "5.1.5",
    "ember-resolver": "8.0.3",
    "ember-responsive": "^5.0.0",
    "ember-source": "3.28.12",
    "ember-source-channel-url": "3.0.0",
    "ember-template-lint": "^5.11.2",
    "ember-test-selectors": "6.0.0",
    "ember-try": "3.0.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-ember": "^11.10.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-qunit": "^8.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "loader.js": "4.7.0",
    "npm-run-all": "4.1.5",
    "prettier": "^3.0.2",
    "qunit": "^2.17.2",
    "qunit-dom": "2.0.0",
    "release-it": "16.3.0",
    "sass": "^1.67.0",
    "webpack": "^5.88.2"
  },
  "resolutions": {
    "ember-cli-babel": "^7.26.10"
  },
  "engines": {
    "node": "12.* || 14.* || >= 16"
  },
  "ember": {
    "edition": "classic"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": {
      "publish": false
    }
  },
  "volta": {
    "node": "16.20.2",
    "pnpm": "8.14.0"
  },
  "lintTodo": {
    "ember-template-lint": {
      "daysToDecay": null
    }
  }
}
